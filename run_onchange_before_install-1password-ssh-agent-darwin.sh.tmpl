{{- if and (eq .chezmoi.os "darwin") (not .isWorkComputer) -}}
#!/bin/bash

# This script sets up the 1Password SSH agent globally for macOS
# Based on: https://developer.1password.com/docs/ssh/agent/compatibility#configure-ssh_auth_sock-globally-for-every-client

set -e

echo "Setting up 1Password SSH agent LaunchAgent..."

# Create LaunchAgents directory if it doesn't exist
mkdir -p ~/Library/LaunchAgents

# Create the LaunchAgent plist
cat << 'EOF' > ~/Library/LaunchAgents/com.1password.SSH_AUTH_SOCK.plist
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.1password.SSH_AUTH_SOCK</string>
  <key>ProgramArguments</key>
  <array>
    <string>/bin/sh</string>
    <string>-c</string>
    <string>/bin/ln -sf $HOME/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock $SSH_AUTH_SOCK</string>
  </array>
  <key>RunAtLoad</key>
  <true/>
</dict>
</plist>
EOF

# Load the LaunchAgent
launchctl unload ~/Library/LaunchAgents/com.1password.SSH_AUTH_SOCK.plist 2>/dev/null || true
launchctl load -w ~/Library/LaunchAgents/com.1password.SSH_AUTH_SOCK.plist

echo "âœ“ 1Password SSH agent LaunchAgent installed and loaded"
echo "  The SSH_AUTH_SOCK will now be available globally to all applications."
{{- end -}}
