# Key bindings
bindkey -e
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward

# History
export HISTFILE=~/.zsh_history
export HISTSIZE=5000
export SAVEHIST=$HISTSIZE
export HISTDUP=erase
export HISTTIMEFORMAT="[%F %T] "
setopt append_history         # append history to the history file
setopt share_history          # share command history data between all sessions
setopt extended_history       # record timestamp of command in HISTFILE
setopt hist_ignore_all_dups   # don't record duplicate commands
setopt hist_save_no_dups      # don't record duplicate commands
setopt hist_ignore_dups       # don't record duplicate commands
setopt hist_find_no_dups      # don't display duplicate commands
setopt hist_ignore_space      # ignore commands that start with space
setopt hist_verify            # show command with history expansion to user before running it

export EDITOR='code --wait'

# Aliases
for i in ~/.aliases/*.sh ; do . $i ; done

alias ls='ls --color'

# Interactive prompt (Starship)
if command -v starship &> /dev/null; then
  eval "$(starship init zsh)"
else
  # Fallback to default prompt if starship is not installed
  autoload -Uz vcs_info
  precmd_functions+=( vcs_info )
  setopt prompt_subst

  zstyle ':vcs_info:git:*' check-for-changes true
  zstyle ':vcs_info:*' unstagedstr '*'
  zstyle ':vcs_info:*' stagedstr '+'
  zstyle ':vcs_info:git:*' formats '%F{200}[%b%u%c]%f'
  zstyle ':vcs_info:*' enable git

  PROMPT='%(?.%F{green}âˆš.%F{red}?%?)%f [$RUBY_ENGINE-$RUBY_VERSION] %B%~%b $vcs_info_msg_0_ $ '
fi

# Completion
autoload -Uz compinit && compinit

zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"

# add .bin to the path
export PATH=$PATH:~/.bin
if [ -f ~/.local/bin/mise ]; then
  eval "$(~/.local/bin/mise activate zsh)"
fi
